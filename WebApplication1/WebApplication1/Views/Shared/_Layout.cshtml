@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - HMS</title>

    <link rel="stylesheet" href="@Url.Content("~/css/globals.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />


    <!-- Bạn có thể thêm Bootstrap hoặc font nếu cần -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <!-- Header/Nav bar có thể đặt tại đây nếu dùng chung -->
        <header>
            <!-- Ví dụ: logo hoặc navigation -->
        </header>

        <!-- Nội dung view con sẽ hiển thị ở đây -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <!-- Footer dùng chung -->
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - HMS - All rights reserved
            </div>
        </footer>
    </div>

    <!-- Optional: scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

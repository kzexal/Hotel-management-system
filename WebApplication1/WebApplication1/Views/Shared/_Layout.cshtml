@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - HMS</title>

    <!-- CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/globals.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />


    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <!-- Header -->
        @if (ViewBag.HideNavbar == null || ViewBag.HideNavbar == false)
        {
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm px-4">
                    <a class="navbar-brand fw-bold text-primary" href="@Url.Action("Index", "Home")">HMS</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link @(ViewBag.Title == "Home Page" ? "active" : "")" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Rooms", "Home")">Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                            </li>
                        </ul>

                        @if (Session["Username"] != null)
                        {
                            <span class="navbar-text me-2">
                                Welcome, <strong>@Session["Username"]</strong>
                            </span>
                            <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Logout", "Account")">Logout</a>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Login", "Account")">Login</a>
                        }
                    </div>
                </nav>

            </header>
        }
            <!-- Nội dung sẽ được render từ View -->
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

          
        </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts section cho từng View -->
    @RenderSection("Scripts", required: false)
</body>
</html>
